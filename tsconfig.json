{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@/entities/*": ["entities/*"],
      "@/middlewares/*": ["middlewares/*"],
      "@/providers/*": ["providers/*"],
      "@/routes/*": ["routes/*"],
      "@/useCases/*": ["useCases/*"],
      "@/utils/*": ["utils/*"],
      "@/repositories/*": ["repositories/*"]
    }
  },
  "include": ["src/**/*"]
}
